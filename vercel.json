{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/server.js"
    }
  ],
  "buildCommand": "npm install --prefix api && npm install --prefix frontend && npm run build --prefix frontend"
}